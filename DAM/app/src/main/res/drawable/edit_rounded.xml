        <shape android:shape="rectangle" >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="#aaaaaa" />
            <gradient android:angle="-90" android:startColor="#333333" android:endColor="#3a3a3a" />
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle" >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="#aaaaaa" />
            <gradient android:angle="-90" android:startColor="#222222" android:endColor="#1f1f1f" />
        </shape>
    </item>
</selector>